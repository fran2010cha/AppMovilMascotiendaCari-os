<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MascotiendaCarinitos.Views.MascotaPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="Silver"
             Title="Detalle Mascota">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Mascota}">
            <StackLayout
                Padding="5">
                <Label 
                    FontAttributes="Bold"
                    FontSize="Medium" 
                    Text="{Binding Mascota.Id}"
                    TextColor="Black">
                </Label>
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium" 
                    Text="{Binding Mascota.Tipo}"
                    TextColor="Black">
                </Label>
                <Label 
                    FontAttributes="Bold"
                    FontSize="Medium" 
                    Text="{Binding Mascota.Precio}"
                    TextColor="Black">
                </Label>
                <Image
                Source="masco"
                WidthRequest="200">
                </Image>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>